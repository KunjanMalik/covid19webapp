<core:FragmentDefinition xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:grid="sap.ui.layout.cssgrid" xmlns:f="sap.f"
	xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<!-- <VBox busy="{diagnosisView>/updateBusy}" busyIndicatorDelay="0" class="iframe"> -->
	<!-- <FlexBox id="flexForumEmbeded" direction="Column" renderType="Div" class="sapUiSmallMargin" height="auto"> -->
